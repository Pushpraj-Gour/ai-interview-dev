{
    "version": "0.2.0",
    "configurations": [
		{
			"env": {
				// "ROUTERS": "projects"
				"ROUTERS": "all"
			},
            "name": "FastAPI - projects",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8081"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}"
        },
		{
			"name": "Test current file",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
		}
    ]
}